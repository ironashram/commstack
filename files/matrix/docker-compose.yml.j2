version: '3'

services:

  nginx:
    image: "nginx:1.25.3"
    restart: "always"
    ports:
      - "443:443"
      - "8448:8448"
    volumes:
      - /docker/matrix/nginx_conf/nginx.conf:/etc/nginx/nginx.conf
      - /docker/matrix/synapse_data/certbot_etc:/etc/letsencrypt

  synapse:
    image: "docker.io/matrixdotorg/synapse:v1.98.0"
    restart: unless-stopped
    environment:
      - SYNAPSE_CONFIG_PATH=/data/homeserver.yaml
    volumes:
      - /docker/matrix/synapse_data:/data:rw
    depends_on:
      - db

  db:
    image: docker.io/postgres:16-alpine
    restart: unless-stopped
    environment:
      - POSTGRES_USER={{ lookup('hashi_vault', 'secret=kv/data/matrix:db_user') }}
      - POSTGRES_PASSWORD={{ lookup('hashi_vault', 'secret=kv/data/matrix:db_password') }}
      - POSTGRES_INITDB_ARGS=--auth-host=scram-sha-256 --encoding=UTF-8 --lc-collate=C --lc-ctype=C
      - POSTGRES_HOST_AUTH_METHOD=scram-sha-256
    volumes:
      - /docker/matrix/synapse_data/db:/var/lib/postgresql/data

  sliding-proxy:
    image: ghcr.io/matrix-org/sliding-sync:v0.99.14
    restart: unless-stopped
    environment:
      - "SYNCV3_SECRET={{ lookup('hashi_vault', 'secret=kv/data/matrix:sliding_sync_secret') }}"
      - "SYNCV3_SERVER=https://{{ lookup('hashi_vault', 'secret=kv/data/matrix:domain') }}"
      - "SYNCV3_DB=user=syncv3 dbname=syncv3 sslmode=disable host=sliding-postgres password={{ lookup('hashi_vault', 'secret=kv/data/matrix:sliding_sync_db_password') }}"
    depends_on:
      - sliding-postgres

  sliding-postgres:
    image: docker.io/postgres:16-alpine
    restart: unless-stopped
    environment:
      - "POSTGRES_USER=syncv3"
      - "POSTGRES_PASSWORD={{ lookup('hashi_vault', 'secret=kv/data/matrix:sliding_sync_db_password') }}"
      - "POSTGRES_DB=syncv3"
    volumes:
      - /docker/matrix/synapse_data/sliding_sync_db:/var/lib/postgresql/data

  certbot:
    image: certbot/dns-cloudflare:v2.8.0
    volumes:
      - /docker/matrix/synapse_data/certbot_etc:/etc/letsencrypt
      - /docker/matrix/synapse_data/cloudflare.ini:/root/cloudflare.ini
    command: >-
      certonly --dns-cloudflare
      --dns-cloudflare-credentials /root/cloudflare.ini
      --dns-cloudflare-propagation-seconds 15
      --email {{ lookup('hashi_vault', 'secret=kv/data/acme:acme_certificate_email') }}
      --agree-tos --no-eff-email
      --keep-until-expiring
      -d {{ lookup('hashi_vault', 'secret=kv/data/acme:acme_certificate_domain_wildcard') }}
