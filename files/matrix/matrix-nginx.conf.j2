server {
    listen 0.0.0.0:443 http2 ssl;
    server_name {{ matrix_domain }};

    ssl_certificate /etc/letsencrypt/live/{{ matrix_domain }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ matrix_domain }}/privkey.pem; # managed by Certbot

    listen 8448 ssl http2 default_server;
    listen [::]:8448 ssl http2 default_server;

    ssl_certificate /etc/letsencrypt/live/{{ matrix_domain }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ matrix_domain }}/privkey.pem; # managed by Certbot

    location / {
        return 403 '{"error": "Forbidden"}';
        default_type application/json;
    }

    location /.well-known/matrix/client {
        return 200 '{"m.homeserver": {"base_url": "https://{{ matrix_domain }}"}, "org.matrix.msc3575.proxy": {"url": "https://{{ matrix_domain }}"}}';
        default_type application/json;
        add_header Access-Control-Allow-Origin *;
    }

    location /.well-known/matrix/server {
        default_type application/json;
        return 200 '{"m.server": "{{ matrix_domain }}"}';
    }

    location ~ ^/(client/|_matrix/client/unstable/org.matrix.msc3575/sync) {
        proxy_pass http://localhost:8009;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
    }

    location ~ ^(\/_matrix|\/_synapse\/client) {
        proxy_pass http://localhost:8008;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
        client_max_body_size 50M;
    }
}
